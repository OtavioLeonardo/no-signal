---
import { AppConfig } from '@/utils/AppConfig';
import Base from '@/layouts/Base.astro';
import Section from '@/components/Section.astro';
import { getCollection, getEntry } from 'astro:content';
import { Image } from 'astro:assets'; 

const { title, description } = AppConfig;

// --- 1. 获取文章列表 ---
const allPosts = await getCollection('posts');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// 提取置顶文章 (Featured) 和 列表文章 (List)
// 安全修复：如果 sortedPosts 为空，pinnedPost 可能是 undefined
const pinnedPost = sortedPosts.find(p => p.data.isPinned) || sortedPosts[0];

// 安全修复：先判断 pinnedPost 是否存在，再进行过滤
const listPosts = pinnedPost 
    ? sortedPosts.filter(p => p.slug !== pinnedPost.slug).slice(0, 10) 
    : [];

// --- 2. 获取 Now 页面数据 ---
const nowPage = await getEntry('pages', 'now');
let NowContent;
let lastUpdated;

if (nowPage) {
    const { Content } = await nowPage.render();
    NowContent = Content;
    lastUpdated = new Date(nowPage.data.updatedDate).toLocaleDateString('zh-CN', {
        year: 'numeric',
        month: 'numeric',
        day: 'numeric'
    });
}

// --- 3. 生成热力图数据 (Signal Frequency) ---
// 生成过去 112 天 (约16周) 的数据
const heatmapData = Array.from({ length: 112 }, (_, i) => {
    const d = new Date();
    d.setDate(d.getDate() - (111 - i)); // 从过去推到现在
    const dateStr = d.toISOString().split('T')[0];
    
    // 检查这一天有没有发文章
    const hasPost = allPosts.some(p => p.data.pubDate.toISOString().split('T')[0] === dateStr);
    return { date: dateStr, hasPost };
});

const navTags = [
    { name: '个人思考', count: 12 },
    { name: '摄影', count: 5 },
    { name: '阅读', count: 8 },
    { name: '赛车', count: 4 },
    { name: '音乐', count: 6 },
    { name: '代码', count: 15 },
];

function formatDate(date: Date) {
    return date.toISOString().split('T')[0];
}
---

<Base head={{ title, description }}>
    <Section>
        <div class="py-8 md:py-12 space-y-12">
            
            {/* --- HEADER --- */}

            {/* --- TOP SECTION: 左 66% (Featured) / 右 33% (Widgets) --- */}
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 h-auto">
                
                {/* 1. 主卡片 (特别呈现) - 占 2/3 */}
                {/* 安全修复：只有 pinnedPost 存在时才渲染 */}
                {pinnedPost ? (
                    <a href={`/posts/${pinnedPost.slug}/`} class="group relative md:col-span-2 min-h-[320px] rounded-2xl overflow-hidden bg-gray-100 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 shadow-sm hover:shadow-md transition-all duration-300">
                        <div class="absolute inset-0 bg-gray-200 dark:bg-gray-700 transition-transform duration-700 group-hover:scale-105">
                            {pinnedPost.data.image?.src ? (
                                <Image 
                                    src={pinnedPost.data.image.src} 
                                    alt={pinnedPost.data.image.alt || pinnedPost.data.title} 
                                    class="w-full h-full object-cover opacity-90 group-hover:opacity-100 transition-opacity"
                                    width={1200} 
                                    height={600}
                                />
                            ) : (
                                <div class="w-full h-full bg-gradient-to-br from-indigo-50 to-purple-50 dark:from-indigo-900/20 dark:to-purple-900/20"></div>
                            )}
                        </div>
                        
                        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent"></div>

                        <div class="absolute bottom-0 left-0 p-6 md:p-8 w-full">
                            <div class="mb-3">
                                <span class="px-2.5 py-1 text-[10px] font-bold uppercase tracking-wider bg-white/20 backdrop-blur-md text-white rounded border border-white/10 shadow-sm">
                                    特别呈现
                                </span>
                            </div>
                            <h2 class="text-2xl md:text-4xl font-bold text-white mb-3 leading-tight group-hover:text-indigo-200 transition-colors">
                                {pinnedPost.data.title}
                            </h2>
                            <p class="text-gray-200 text-sm md:text-base line-clamp-2 md:w-5/6 opacity-90">
                                {pinnedPost.data.description}
                            </p>
                        </div>
                    </a>
                ) : (
                    /* 如果没有文章，显示占位符 */
                    <div class="md:col-span-2 min-h-[320px] rounded-2xl bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 flex items-center justify-center">
                        <p class="text-gray-400">暂无文章</p>
                    </div>
                )}

                {/* 2. 右侧 Widgets - 占 1/3 */}
                <div class="flex flex-col gap-6 h-full">
                    
                    {/* Widget A: 信号频度 (Heatmap) */}
                    <div class="flex-1 rounded-2xl bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 p-6 shadow-sm flex flex-col justify-between hover:border-gray-300 dark:hover:border-gray-600 transition-colors">
                        <div class="flex items-center justify-between mb-4">
                            <h3 class="text-xs font-bold text-gray-400 uppercase tracking-widest">
                                信号频度
                            </h3>
                            <span class="text-[10px] font-mono text-gray-400 bg-gray-100 dark:bg-white/5 px-1.5 py-0.5 rounded">
                                Last 16 weeks
                            </span>
                        </div>
                        
                        {/* 热力图网格 */}
                        <div class="flex flex-wrap content-end gap-1 h-full">
                            {heatmapData.map((day) => (
                                <div 
                                    class={`w-2 h-2 rounded-[1px] transition-colors duration-300 ${
                                        day.hasPost 
                                        ? 'bg-green-500 dark:bg-green-400 shadow-[0_0_4px_rgba(74,222,128,0.5)]' 
                                        : 'bg-gray-100 dark:bg-white/5'
                                    }`}
                                    title={`${day.date}: ${day.hasPost ? 'Signal Detected' : 'No Signal'}`}
                                ></div>
                            ))}
                        </div>
                    </div>

                    {/* Widget B: 话题矩阵 (Tags) - 视觉加重 */}
                    <div class="flex-1 rounded-2xl bg-gray-50 dark:bg-[#151516] border border-gray-200 dark:border-gray-800 p-6 flex flex-col shadow-inner">
                         <div class="flex items-center justify-between mb-5">
                             <h3 class="text-xs font-bold text-gray-400 uppercase tracking-widest">
                                 话题矩阵
                             </h3>
                             <a href="/tags" class="text-xs text-indigo-500 hover:text-indigo-400 font-bold">查看标签 &rarr;</a>
                         </div>
                         
                         <div class="flex flex-wrap gap-2.5">
                            {navTags.map(tag => (
                                <a href={`/tags/${tag.name}`} class="flex items-center gap-2 px-3 py-1.5 bg-white dark:bg-gray-800 text-xs font-bold text-gray-700 dark:text-gray-200 rounded-lg border border-gray-200 dark:border-white/10 shadow-sm hover:border-indigo-500 hover:text-indigo-500 hover:shadow-md transition-all active:scale-95">
                                    <span>{tag.name}</span>
                                    {/* <span class="text-[9px] text-gray-400 font-mono bg-gray-100 dark:bg-black/30 px-1 rounded">{tag.count}</span> */}
                                </a>
                            ))}
                         </div>
                    </div>
                </div>
            </div>


            {/* --- BOTTOM SECTION: 左 40 (Now) / 右 60 (Logs) --- */}
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-10 items-start">
                
                {/* 1. 左侧: Now (40%) */}
                <div class="lg:col-span-5">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-xs font-bold uppercase tracking-widest text-gray-400">
                            Now / 实时信号
                        </h3>
                        {lastUpdated && (
                            <span class="text-[10px] text-gray-400 bg-gray-100 dark:bg-white/5 px-2 py-0.5 rounded-full">
                                更新于 {lastUpdated}
                            </span>
                        )}
                    </div>

                    <div class="rounded-2xl bg-gray-50 dark:bg-white/5 border border-gray-100 dark:border-white/5 p-6 md:p-8">
                        {/* 安全修复：确保 NowContent 存在再渲染 */}
                        {nowPage && NowContent ? (
                            <div class="prose prose-sm prose-gray dark:prose-invert 
                                prose-headings:font-bold prose-headings:text-gray-900 dark:prose-headings:text-white
                                prose-p:text-gray-600 dark:prose-p:text-gray-300
                                prose-a:text-indigo-500 hover:prose-a:text-indigo-600 prose-a:no-underline
                                prose-li:marker:text-gray-300">
                                <NowContent />
                            </div>
                        ) : (
                            <p class="text-sm text-gray-400 italic">No signal detected...</p>
                        )}
                        <div class="mt-6 pt-4 border-t border-gray-200/50 dark:border-white/5 text-xs font-mono text-gray-400 opacity-60">
                            > End of transmission
                        </div>
                    </div>
                </div>

                {/* 2. 右侧: Logs (60%) */}
                <div class="lg:col-span-7">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-xs font-bold uppercase tracking-widest text-gray-400">
                            近期文章
                        </h3>
                        <a href="/posts" class="text-xs font-bold text-indigo-500 hover:text-indigo-600 transition-colors">
                            查看归档 &rarr;
                        </a>
                    </div>

                    <div class="flex flex-col border-t border-gray-200 dark:border-gray-800">
                        {listPosts.length > 0 ? (
                            listPosts.map((post) => (
                                <a href={`/posts/${post.slug}/`} class="group flex flex-col md:flex-row md:items-center gap-2 md:gap-6 py-4 border-b border-gray-100 dark:border-gray-800/50 hover:bg-gray-50 dark:hover:bg-gray-800/30 transition-colors px-2 rounded-lg -mx-2">
                                    
                                    <div class="w-36 shrink-0">
                                        <span class="text-xs font-mono text-gray-400 group-hover:text-gray-600 dark:group-hover:text-gray-300 transition-colors">
                                            {formatDate(post.data.pubDate)}
                                        </span>
                                    </div>

                                    <div class="flex-grow min-w-0 pr-4">
                                        <h4 class="text-base font-semibold text-gray-900 dark:text-gray-100 group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors truncate">
                                            {post.data.title}
                                        </h4>
                                        <p class="text-sm text-gray-500 dark:text-gray-400 line-clamp-1 mt-0.5 opacity-80 group-hover:opacity-100">
                                            {post.data.description}
                                        </p>
                                    </div>

                                    <div class="hidden md:flex items-center gap-4 shrink-0">
                                        <div class="flex gap-1">
                                            {post.data.tags && post.data.tags.slice(0, 2).map(tag => (
                                                <span class="text-[10px] uppercase tracking-wider px-2 py-0.5 rounded bg-gray-100 dark:bg-gray-800 text-gray-500 border border-gray-200 dark:border-gray-700">
                                                    {tag}
                                                </span>
                                            ))}
                                        </div>
                                        <svg class="w-4 h-4 text-gray-300 group-hover:text-indigo-500 transform group-hover:translate-x-1 transition-all" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                        </svg>
                                    </div>
                                </a>
                            ))
                        ) : (
                            <div class="py-10 text-center text-gray-400 text-sm">暂无更多文章</div>
                        )}
                    </div>
                </div>

            </div>
        </div>
    </Section>
</Base>