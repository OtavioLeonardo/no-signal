---
import Base from '@/layouts/Base.astro';
import Section from '@/components/Section.astro';
import type { MarkdownInstance } from 'astro';

// 1. å®šä¹‰æ•°æ®ç»“æ„
interface Frontmatter {
  title: string;
  pubDate: string;
  description: string;
  tags?: string[];
}

// 2. æŠ“å–æ–‡ç« 
const matches = import.meta.glob<MarkdownInstance<Frontmatter>>('./posts/*.md', { eager: true });
const allPosts = Object.values(matches);

// 3. ç­›é€‰æ—¥è®°
const diaryPosts = allPosts.filter((post) => {
  const tags = post.frontmatter.tags || [];
  return tags.includes('diary');
});

// 4. æŒ‰æ—¶é—´å€’åº
const sortedPosts = diaryPosts.sort(
  (a, b) => new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf()
);

// --- é€»è¾‘ A: ç”Ÿæˆçƒ­åŠ›å›¾æ•°æ® ---
const today = new Date();
const oneYearAgo = new Date();
oneYearAgo.setFullYear(today.getFullYear() - 1);

const activityMap = new Map<string, number>();

sortedPosts.forEach(post => {
  // ä¿®å¤ç‚¹ 1: å¼ºåˆ¶å‘Šè¯‰ TS è¿™æ˜¯ä¸€ä¸ª stringï¼Œä¸ä¼šæ˜¯ undefined
  const dateStr = new Date(post.frontmatter.pubDate).toISOString().split('T')[0] as string;
  activityMap.set(dateStr, (activityMap.get(dateStr) || 0) + 1);
});

const days = [];
let currentDate = new Date(oneYearAgo);

while (currentDate <= today) {
  // ä¿®å¤ç‚¹ 2: åŒæ ·å¼ºåˆ¶è½¬æ¢ä¸º string
  const dateStr = currentDate.toISOString().split('T')[0] as string;
  const count = activityMap.get(dateStr) || 0;
  
  let level = 0;
  if (count > 0) level = 1;
  if (count > 1) level = 2;
  if (count > 3) level = 3;
  days.push({ date: dateStr, level, count });
  
  currentDate.setDate(currentDate.getDate() + 1);
}

// --- é€»è¾‘ B: æŒ‰ [å¹´] -> [æœˆ] åˆ†ç»„ ---
type MonthGroup = Record<string, MarkdownInstance<Frontmatter>[]>;
type YearGroup = Record<string, MonthGroup>;

const groupedPosts = sortedPosts.reduce<YearGroup>((acc, post) => {
  const date = new Date(post.frontmatter.pubDate);
  const year = date.getFullYear().toString();
  const monthName = date.toLocaleString('en-US', { month: 'long' });
  
  if (!acc[year]) acc[year] = {};
  if (!acc[year][monthName]) acc[year][monthName] = [];
  
  acc[year][monthName].push(post);
  return acc;
}, {});

const years = Object.keys(groupedPosts).sort((a, b) => Number(b) - Number(a));

const monthOrder: Record<string, number> = {
  'January': 0, 'February': 1, 'March': 2, 'April': 3, 'May': 4, 'June': 5,
  'July': 6, 'August': 7, 'September': 8, 'October': 9, 'November': 10, 'December': 11
};
---

<Base head={{ title: 'Diary', description: 'Log of my life' }}>
  <Section>
    <div class="py-12">
      <h1 class="text-3xl font-bold mb-8 flex items-center gap-3">
        ğŸ“… Life Log
        <span class="text-sm font-normal text-gray-400 bg-gray-100 dark:bg-stone-800 px-2 py-1 rounded-md">
           {sortedPosts.length} entries
        </span>
      </h1>

      {sortedPosts.length === 0 && (
        <div class="p-4 bg-orange-100 text-orange-800 rounded-lg border border-orange-200">
          è¿˜æ²¡æœ‰æ‰¾åˆ°æ—¥è®°ã€‚è¯·ç¡®ä¿ä½ çš„ Markdown æ–‡ç«  frontmatter é‡ŒåŒ…å« <code>tags: ["diary"]</code>
        </div>
      )}

      {/* --- çƒ­åŠ›å›¾åŒºåŸŸ --- */}
      <div class="mb-12 overflow-x-auto pb-4 scrollbar-hide">
        <div class="flex gap-1 text-xs text-gray-400 mb-2 items-center">
          <span>Less</span>
          <div class="w-3 h-3 bg-stone-200 dark:bg-stone-800 rounded-sm"></div>
          <div class="w-3 h-3 bg-orange-200 dark:bg-orange-900/50 rounded-sm"></div>
          <div class="w-3 h-3 bg-orange-400 dark:bg-orange-600 rounded-sm"></div>
          <div class="w-3 h-3 bg-orange-600 dark:bg-orange-400 rounded-sm"></div>
          <span>More</span>
        </div>
        
        <div class="grid grid-rows-7 grid-flow-col gap-[3px] w-max">
          {days.map((day) => (
            <div 
              title={`${day.date}: ${day.count} entries`}
              class:list={[
                "w-3 h-3 rounded-[2px] transition-all hover:ring-1 ring-gray-400",
                {
                  "bg-stone-200 dark:bg-stone-800": day.level === 0,
