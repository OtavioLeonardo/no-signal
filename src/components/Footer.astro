---
import Section from './Section.astro';
const year = new Date();
---

<Section>
	<footer class="py-12 mt-10 border-t border-gray-100 dark:border-white/5 text-center text-sm text-gray-400 dark:text-gray-500">
		<div class="flex justify-center gap-6 mb-4 font-medium">
			<a class="hover:text-black dark:hover:text-white transition-colors" href="/rss.xml">RSS</a>
			<a class="hover:text-black dark:hover:text-white transition-colors" href="/sitemap-index.xml">Sitemap</a>
			<a class="hover:text-black dark:hover:text-white transition-colors" href="/tags">Tags</a>
		</div>
		<p>
            © {year.getFullYear()} 
            <span class="mx-2">·</span> 
            <a class="hover:text-black dark:hover:text-white transition-colors" href="/imprint/">Imprint</a>
        </p>
        <p class="mt-2 text-xs opacity-70">
            Made with ♥️ by <a class="hover:text-black dark:hover:text-white transition-colors" href="https://www.nicdun.dev" target="_blank">nicdun.dev</a>
        </p>
	</footer>
</Section>