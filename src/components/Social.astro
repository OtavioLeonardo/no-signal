---
interface Props {
	href: string;
}

const { href } = Astro.props;
---

<a
	href={href}
	target="_blank"
	class="flex h-10 w-10 items-center justify-center rounded-full text-gray-500 transition-all duration-200 hover:bg-gray-200/50 hover:text-black hover:scale-110 active:scale-95 dark:text-gray-400 dark:hover:bg-white/10 dark:hover:text-white"
>
	<slot />
</a>