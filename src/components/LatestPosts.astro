---
import Section from './Section.astro';
import Card from './Card.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
	posts: CollectionEntry<'posts'>[];
}

const { posts } = Astro.props;
---

<Section>
    {/* 关键修改：
       - py-8 -> py-4 (或者直接去掉顶部 padding)
       - 增加了 border-t (顶部细线) 来在 Tags 和 Posts 之间做一个极淡的分割，增加层次感
       - 标题栏居中或保持两端对齐均可，这里保持两端对齐，但增加 margin-top
    */}
    <div class="py-8 border-t border-gray-100 dark:border-white/5">
        
        {/* Header */}
        <div class="flex items-center justify-between mb-8 px-1">
            <h2 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Latest Notes</h2>
            <a href="/posts" class="text-sm font-medium text-gray-500 hover:text-black dark:text-gray-400 dark:hover:text-white transition-colors">
                View All <span aria-hidden="true">&rarr;</span>
            </a>
        </div>

        {/* Grid Layout */}
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {
                posts.map((post) => (
                    <div class="h-full">
                        <Card post={post} />
                    </div>
                ))
            }
        </div>
    </div>
</Section>