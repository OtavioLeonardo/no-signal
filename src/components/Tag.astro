---
interface Props {
	tag: string;
	withHref?: boolean;
}

const { tag, withHref } = Astro.props;

// 定义统一的 Apple Pill 样式
const baseClass = "inline-flex items-center px-3 py-1 rounded-full text-xs font-medium tracking-wide transition-all duration-200 border shadow-sm";
const colorClass = "bg-white border-gray-200 text-gray-600 hover:text-black hover:shadow-md hover:scale-105 hover:border-gray-300 dark:bg-white/10 dark:border-white/5 dark:text-gray-300 dark:hover:text-white dark:hover:bg-white/20";
const noHrefClass = "bg-gray-100 border-transparent text-gray-500 dark:bg-white/5 dark:text-gray-400 cursor-default";
---

{
    withHref ? (
        <a
            href={`/tags/${tag}`}
            class={`${baseClass} ${colorClass} mr-2 mb-2`}
        >
            #{tag}
        </a>
    ) : (
        <span class={`${baseClass} ${noHrefClass} mr-2 mb-2`}>
             #{tag}
        </span>
    )
}